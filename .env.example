# Application Configuration
APP_NAME="ModularMind MM-RAG"
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost,http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/modularmind
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Authentication
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_HASH_ALGORITHM=bcrypt

# Embedding Service
EMBEDDING_SERVICE_URL=http://localhost:8001
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database
VECTOR_STORE_TYPE=faiss  # faiss, pinecone, milvus, redis
VECTOR_STORE_PATH=./data/vector_indexes
SIMILARITY_TOP_K=5

# Cache Settings
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# LLM Service
LLM_SERVICE_TYPE=openai  # openai, huggingface, azure
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_VERSION=2023-05-15
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
DEFAULT_MODEL=gpt-3.5-turbo

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
METRICS_ENDPOINT=/metrics

# File Storage
STORAGE_TYPE=local  # local, s3
STORAGE_PATH=./data/files
MAX_UPLOAD_SIZE=25MB  # in MB
ALLOWED_EXTENSIONS=pdf,txt,docx,md,csv,json

# Background Tasks
MAX_WORKERS=5
TASK_TIMEOUT=300  # in seconds

# Feature Flags
ENABLE_QUERY_EXPANSION=true
ENABLE_RERANKING=true
ENABLE_ANSWER_VALIDATION=true
ENABLE_CONTEXT_OPTIMIZATION=true
ENABLE_HYBRID_SEARCH=true

# Model Preloading
PRELOAD_MODELS=all-MiniLM-L6-v2,paraphrase-multilingual-MiniLM-L12-v2